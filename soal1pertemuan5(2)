#include <iostream>
using namespace std;

int main(){
    int a, b;
    char repeat;
    atas:
    cout <<"Masukkan Bilangan = ";
    cin >> a;
    b = a % 2;
    cout <<"Nilai bilangan modulus 2 adalah = "<< b;
    cout <<"\n\nIngin hitung lagi[Y/T] : ";
    cin >> repeat;
    if (repeat == 'Y'|| repeat == 'y')
    goto atas;
    return 0;
}
